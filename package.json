{
  "name": "@brpaz/vite-manifest-parser",
  "version": "1.0.0",
  "description": "Utilities to work with ViteJS manifest files",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "https://github.com/brpaz/vite-manifest-parser",
  "author": "Bruno Paz",
  "keywords": [
    "vite"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'lib/**/*.{js,ts,tsx}' --fix",
    "test": "jest --coverage",
    "format": "prettier --write lib/**/*.ts",
    "prepublish": "npm run build",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      "@semantic-release/git"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
